<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polimi.insolesNoAPI"
    android:installLocation="internalOnly">

    <!-- NORMAL PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- DANGEROUS PERMISSIONS -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/insoles_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/insoles_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- SERVICE -->
        <service android:name=".applicationLogic.service.TCPListenerService" />
        <service android:name=".applicationLogic.service.CreateOutputFileService" />
        <service android:name=".applicationLogic.service.CreateTimestampFileService" />
        <service android:name=".applicationLogic.service.TimeTestingService" />
        <service android:name=".applicationLogic.service.ReadTestingService" />

        <activity android:name=".ui.DataPreviewActivity"/>


    </application>

</manifest>